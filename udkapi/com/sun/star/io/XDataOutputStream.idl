#ifndef __com_sun_star_io_XDataOutputStream_idl__
#define __com_sun_star_io_XDataOutputStream_idl__

#ifndef __com_sun_star_io_XOutputStream_idl__
#include <com/sun/star/io/XOutputStream.idl>
