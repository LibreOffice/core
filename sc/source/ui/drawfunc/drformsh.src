#define MN_RENAME_OBJECT \
    MenuItem\
    {\
        Identifier = SID_RENAME_OBJECT ; \
        HelpId = CMD_SID_RENAME_OBJECT ; \
        Text [ en-US ] = "Name...";\
    };

// #i68101#
#define MN_TITLE_DESCRIPTION_OBJECT \
