#undef HAVE_CXX11_PERFECT_FORWARDING
#undef HAVE_GCC_BUILTIN_ATOMIC
#undef HAVE_SFINAE_ANONYMOUS_BROKEN
#undef HAVE_THREADSAFE_STATICS
#undef HAVE_SYSLOG_H

#endif
