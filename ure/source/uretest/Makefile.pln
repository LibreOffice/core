            $(URE_HOME)/program/types.rdb
	touch $@

out.pln/types.cppumaker.flag: out.pln/types.rdb | out.pln
	LD_LIBRARY_PATH=$(URE_HOME)/program $(SDK_HOME)/bin/cppumaker \
            -O./out.pln/include/types $< -X$(URE_HOME)/program/types.rdb
