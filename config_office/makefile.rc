# 
# mark this makefile as a recursive one
# 

MAKEFILERC=yes

# 
# implementation of cvs checkout
# 

.IF "$(checkout)"==""
all_target: ALLTAR
.ELSE	# "$(checkout)"==""
.IF "$(checkout)"=="true"
% : $(NULL)
	_cvs co $@
.ELSE	# "$(checkout)"=="true"
% : $(NULL)
	_cvs co -r$(checkout) $@
.ENDIF	# "$(checkout)"=="true"
all_subdirs : $(RC_SUBDIRS)
.ENDIF	# "$(checkout)"==""

