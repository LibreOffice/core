# 
# bootstrap target
# 

bootstrap .PHONY :
	@config_office/bootstrap


# 
# configure target
# 

configure .PHONY SETDIR=config_office :
	@configure

install: instsetoo
	cd $?; dmake subdmake=true  product="full"

# experimental composite targets:

udk_modules :	xml2cmp sal vos store registry unoidl udkapi codemaker \
		sandbox ridljar jurt cppu cppuhelper javaunohelper \
		jut rdbmaker io bridges cpputools io stoc remotebridges

non_vcl :	udk_modules ucbhelper offuh unoil unoidl officecfg UnoControls \
		rsc sot eventattacher idl transex3 inet

