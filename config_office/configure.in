		HAVE_PSDK_H="no"
	fi
	if test -f "$PSDK_HOME/lib/unicows.lib"; then
		HAVE_PSDK_LIB="yes"
	else
		HAVE_PSDK_LIB="no"
	fi
	if test "$HAVE_PSDK_H" = "yes" -a "$HAVE_PSDK_LIB" = "yes"; then
		AC_MSG_RESULT([PSDK files found])
	else
		AC_MSG_ERROR([PSDK files not found, please use --with-psdk-home .])
	fi
fi
