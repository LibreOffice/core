[  --enable-libart         Enables the use of libart, instead of GPC for
			  polygon clipping.
],,)
AC_ARG_ENABLE(openldap,
[   --enable-openldap      Enables the use of the OpenLDAP LDAP SDK instead
                           of the Netscape/Mozilla one
],,)
