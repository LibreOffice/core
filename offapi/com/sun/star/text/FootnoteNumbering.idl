    const short PER_CHAPTER = 1;

    //-------------------------------------------------------------------------

    // DocMerge from idl: value com::sun::star::text::FootnoteNumbering::PER_DOCUMENT
    /** The counter of the automatic footnote numbering does not restart.
     */
    const short PER_DOCUMENT = 2;

