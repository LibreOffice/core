module com { module sun { module star { module xml { module dom { module events {

// Introduced in DOM Level 2:
interface XMouseEvent : XUIEvent {

    long getScreenX();
    long getScreenY();
    long getClientX();
    long getClientY();
    boolean getCtrlKey();
    boolean getShiftKey();
    boolean getAltKey();
    boolean getMetaKey();
    short getButton();
    XEventTarget getRelatedTarget();

    void initMouseEvent([in] string typeArg,
                        [in] boolean canBubbleArg,
                        [in] boolean cancelableArg,
                        [in] com::sun::star::xml::dom::views::XAbstractView viewArg,
                        [in] long detailArg,
                        [in] long screenXArg,
                        [in] long screenYArg,
                        [in] long clientXArg,
                        [in] long clientYArg,
                        [in] boolean ctrlKeyArg,
                        [in] boolean altKeyArg,
                        [in] boolean shiftKeyArg,
                        [in] boolean metaKeyArg,
                        [in] short buttonArg,
                        [in] XEventTarget relatedTargetArg);
};
}; }; }; }; }; };

