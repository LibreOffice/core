#ifndef __com_sun_star_awt_grid_XGridControl_idl__
#define __com_sun_star_awt_grid_XGridControl_idl__

#include <com/sun/star/awt/grid/XGridSelection.idl>
#include <com/sun/star/awt/grid/XGridColumnModel.idl>
