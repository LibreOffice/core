' REQUIRED VARIABLES for interface/service tests:

' Requiered for  com.sun.star.text.XParagraphCursor
 Global oText As Object
' Requiered for  com.sun.star.text.XTextCursor
 Global oCursor As Object 'One more cursor


Sub CreateObj()

'*************************************************************************
' COMPONENT: 
' sw.SwXTextCursor
'*************************************************************************
On Error Goto ErrHndl

    Dim bOK As Boolean
    bOK = true

    oDoc = utils.createDocument("swriter", cObjectName)

    oText = oDoc.Text
    oObj = oText.createTextCursor()
    oCursor = oText.createTextCursor()


Exit Sub
ErrHndl:
    Test.Exception()
End Sub

Function modifyDescriptor(descr As Variant) As Variant
Dim cText as String
Dim n as Integer, i as Integer
Dim vFields as Variant
On Error Goto ErrHndl

    cText = ". Zeile : test of " &amp; cObjectName
    ' write some strings to document
    oObj.gotoEnd(false)
    oText.insertControlCharacter(oObj, 0, false)
    for i = 1 to 9
        oObj.gotoEnd(false)
        oText.insertString(oObj,Trim(Str(i)) &amp; cText,false)
        oText.insertControlCharacter(oObj, 0, false)
    next i
    for i = 0 to ubound(descr)
        if descr(i).Name = "SortFields" then 
 			vFields = descr(i).Value
 			for n = lBound(vFields) to uBound(vFields)
	 			vFields(n).IsCaseSensitive = false
	 			vFields(n).IsAscending = false
        	next n
            descr(i).Value = vFields()        
        end if
    next i
    ' select inserted paragraphs
	for i = 1 to 9
		oObj.gotoPreviousParagraph(true)
	next i
    modifyDescriptor() = descr
Exit Function
ErrHndl:
    Out.Log("Exception in SwXTextCursor.modifyDescriptor() :")
    Test.Exception()
end Function

Function checkSort() As Boolean
On Error Goto ErrHndl
    Dim bOK as Boolean

    bOK = true
    oObj.gotoEnd(false)
	for i = 1 to 9
		oObj.gotoPreviousParagraph(false)
		oObj.gotoStartOfParagraph(false)
		oObj.gotoEndOfParagraph(true)
		bOK = bOK and (CInt(mid(oObj.String,1,1)) = i)
        print oObj.String,i
    next i
    checkSort() = bOK
Exit Function
ErrHndl:
    Out.Log("Exception in SwXTextCursor.checkSort() :")
    Test.Exception()
end Function
