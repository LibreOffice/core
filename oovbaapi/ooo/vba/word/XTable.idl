module ooo { module vba { module word {

interface XRange;

interface XTable
{
    interface ::ooo::vba::XHelperInterface;
    [attribute, readonly ] string Name; // for debug only

    XRange Range() raises (com::sun::star::script::BasicErrorException);

    /**
     select the table
     */
