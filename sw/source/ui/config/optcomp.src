#include "optcomp.hrc"
#include "globals.hrc"
#include "helpid.h"

// TabPage TP_OPTCOMPATIBILITY_PAGE --------------------------------------

TabPage TP_OPTCOMPATIBILITY_PAGE
{
    HelpID = HID_OPTCOMPATIBILITY_PAGE ;
    Size = MAP_APPFONT ( 260 , 185 ) ;
    Hide = TRUE ;
    FixedLine FL_MAIN
    {
        Pos = MAP_APPFONT ( 6 , 3 ) ;
        Size = MAP_APPFONT ( 248 , 8 ) ;
        Text = "Kompatibilitätsoptionen für %DOCNAME" ;
        Text[ english_us ] = "Compatibility options for %DOCNAME";
    };
    FixedText FT_FORMATTING
    {
        Pos = MAP_APPFONT ( 12 , 14 ) ;
        Size = MAP_APPFONT ( 236 , 8 ) ;
        Text = "Empfohlen ~Formatierungsoptionen für" ;
        Text[ english_us ] = "Recommended ~formatting options for";
    };
    ListBox LB_FORMATTING
    {
        Pos = MAP_APPFONT ( 12 , 25 ) ;
        Size = MAP_APPFONT ( 118 , 24 ) ;
        DropDown = TRUE;
    };
    FixedText FT_OPTIONS
    {
        Pos = MAP_APPFONT ( 12 , 40 ) ;
        Size = MAP_APPFONT ( 236 , 8 ) ;
        Text = "~Optionen" ;
        Text[ english_us ] = "~Options";
    };
    Control LB_OPTIONS
    {
        HelpId = HID_COMPATIBILITY_OPTIONS_BOX ;
        Pos = MAP_APPFONT ( 12 , 51 ) ;
        Size = MAP_APPFONT ( 236 , 108 ) ;
        Border = TRUE ;
        TabStop = TRUE ;
    };
    PushButton PB_RESET
    {
        Pos = MAP_APPFONT ( 125 , 165 ) ;
        Size = MAP_APPFONT ( 60 , 14 ) ;
        Text = "~Zurücksetzen" ;
        Text[ english_us ] = "~Reset";
    };
    PushButton PB_DEFAULT
    {
        Pos = MAP_APPFONT ( 188 , 165 ) ;
        Size = MAP_APPFONT ( 60 , 14 ) ;
        Text = "Als ~Standard verwenden" ;
        Text[ english_us ] = "Use as ~Default";
    };

    String STR_USERENTRY
    {
        Text = "<Benutzerdefiniert>";
        Text[ english_us ] = "<User settings>";
    };

    String STR_QRYBOX_USEASDEFAULT
    {
        Text = "Möchten Sie die Kompatibiltätsoptionen der Standard-Vorlage ändern?\nDiese Änderungen wirken sich auf alle neuen Dokumente aus, die auf der Standard-Vorlage basieren.";
        Text[ english_us ] = "Do you want to change the compatibility options of the default template?\nThis will affect all new documents based on the default template.";
    };

// the option strings ----------------------------------------------------

    String STR_PRINTER_METRICS
    {
        Text = "Druckermaße für Dokumentformatierung verwenden";
        Text[ english_us ] = "Use printer metrics for document formatting";
    };
    String STR_MERGE_PARA_DIST
    {
        Text = "Alle Absatz- und Tabellenabstände addieren (aktuelles Dokument)";
        Text[ english_us ] = "Add spacing between paragraphs and tables (in current document)";
    };
    String STR_MERGE_PARA_DIST_PAGESTART
    {
        Text = "Absatz- und Tabellenabstände an Seitenanfängen addieren (aktuelles Dokument)";
        Text[ english_us ] = "Add paragraph and table spacing at tops of pages (in current document)";
    };
    String STR_TAB_ALIGNMENT
    {
        Text = "Tabulatorposition ausrichten (aktuelles Dokument)";
        Text[ english_us ] = "Align tab stop position (in current document)";
    };
    String STR_EXTERNAL_LEADING
    {
        Text = "Keinen zusätzlichen Leerraum zwischen Textzeilen hinzufügen";
        Text[ english_us ] = "Do not add leading (extra space) between lines of text";
    };
};

