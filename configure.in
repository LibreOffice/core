dnl ===================================================================
if test "$SOLAR_JAVA" != ""; then

   # Windows-specific tests
   if test "$build_os" = "cygwin" -a "$_os" = "WINNT"; then
      if test "$CL_X64" != ""; then
	 bitness="64-bit"
