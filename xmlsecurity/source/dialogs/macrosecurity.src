        SVLook = TRUE;
        Border = TRUE;
        VScroll = TRUE;
        Sort = TRUE;
    };
    PushButton FL_ADD_TRUSTFILELOC
    {
        Pos = MAP_APPFONT( TS_COL_4, TS_ROW_7 );
