    FixedImage FI_TRUSTFILE_RO
    {
        Pos = MAP_APPFONT( TS_COL_1 - 7, TS_ROW_5 );
        Size = MAP_APPFONT( 6, 6 );
    };
    ListBox LB_TRUSTFILELOC
    {
        Pos = MAP_APPFONT( TS_COL_1, TS_ROW_5 );
