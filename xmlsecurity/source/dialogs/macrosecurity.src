        Text [ en-US ] = "Add...";
    };
    PushButton FL_REMOVE_TRUSTFILELOC
    {
        Pos = MAP_APPFONT( TS_COL_6, TS_ROW_7 );
        Size = MAP_APPFONT( RSC_CD_PUSHBUTTON_WIDTH, RSC_CD_PUSHBUTTON_HEIGHT );
        Text [ de ] = "Entfernen";
        Text [ en-US ] = "Remove";
    };
};
