        Text [ en-US ] = "Tight";
    };
    String STR_NORMAL
    {
        Text [ en-US ] = "Normal";
    };
    String STR_LOOSE
    {
        Text [ en-US ] = "Loose";
    };
    String STR_VERY_LOOSE
    {
        Text [ en-US ] = "Very Loose";
    };
    String STR_CUSTOM
