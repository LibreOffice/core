        ItemList =
        {
            ToolBoxItem
            {
                Identifier = TBI_RIGHT ;
                Text = "Rotate Right" ;
                ItemBitmap = Bitmap
                {
        //          File = "symphony/rotate_right.png" ;
                };
            };
        };
    };
    String STR_HELP_LEFT
    {
        Text [ en-US ] = "Rotate counterclockwise by 45 degrees." ;
    };
