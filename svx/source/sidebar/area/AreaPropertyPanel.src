    Size = MAP_APPFONT(  POPUP_COLOR_PICKER_WIDTH , POPUP_COLOR_PICKER_HEIGHT  );

    Control VS_COLOR
    {
        HelpID = HID_PPROPERTYPANEL_AREA_COLOR_VS;
