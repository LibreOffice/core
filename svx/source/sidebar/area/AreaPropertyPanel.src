    {
        Text [ en-US ] = "Rotate clockwise by 45 degrees." ;
    };
    Image IMG_ROT_LEFT
    {
        ImageBitmap = Bitmap{File = "symphony/rotate_left.png";};
    };
    Image IMG_ROT_RIGHT
    {
        ImageBitmap = Bitmap{File = "symphony/rotate_right.png";};
    };
};
