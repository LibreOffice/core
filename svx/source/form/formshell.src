                    {
                        ITEM_FORMAT_SET_SUPER_SCRIPT
                    };
                    MenuItem
                    {
                        ITEM_FORMAT_SET_SUB_SCRIPT
                    };
                };
            };
        };
        MenuItem
        {
            Identifier = MENU_FM_TEXTATTRIBITES_ALIGNMENT;
            HelpID = HID_MENU_FM_TEXTATTRIBUTES_ALIGNMENT;
            Text [ en-US ] = "~Alignment";
            RadioCheck = TRUE;
            SubMenu = Menu
            {
                ItemList =
                {
                    MenuItem
                    {
                        RadioCheck = TRUE;
                        ITEM_FORMAT_ATTR_PARA_ADJUST_LEFT
                    };
