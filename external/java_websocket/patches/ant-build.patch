+<project default="all">
+    <target name="all" depends="jar" />
+
+    <target name="compile">
+        <mkdir dir="build/classes" />
+        <javac includeantruntime="false" srcdir="src/main/java"
+               destdir="build/classes" encoding="UTF-8">
+        </javac>
