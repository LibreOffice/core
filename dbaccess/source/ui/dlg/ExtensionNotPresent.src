String RID_STR_EXTENSION_NOT_PRESENT
{
    Text [ de ] = "Zum Öffnen eines Reports benötigen Sie die Extension %RPT_EXTENSION_NAME.\n\nKlicken Sie auf 'Herunterladen...', um die Extension herunterzuladen und zu installieren." ;
    Text [ en-US ] = "To open a report you require the extension %RPT_EXTENSION_NAME.\n\nClick 'Download...' to download and install the extension.";
};
