    };                                                                                                  \

#define AUTO_HOST_AND_PORT(AUTO_Y)                                                                      \
    FixedText FT_HOSTNAME                                                                               \
    {                                                                                                   \
        Pos = MAP_APPFONT ( 6 , AUTO_Y + 2 ) ;                                                          \
        Size = MAP_APPFONT ( EDIT_X - 7 , FIXEDTEXT_HEIGHT ) ;                                          \
        Text[ en-US ] = "~Host name";                                                                   \
