        Size            = MAP_APPFONT ( 179 , 49 ) ;
        UniqueId        = HID_DLG_QRY_HELPTEXT ;
        SVLook          = TRUE;
        WordBreak       = TRUE;
    };

    OKButton PB_OK
    {
        Pos = MAP_APPFONT ( 206 , 6 ) ;
        Size = MAP_APPFONT ( 50 , 14 ) ;
        TabStop = TRUE ;
        DefButton = TRUE ;
