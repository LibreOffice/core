            Size = MAP_APPFONT( 87, 60 );
            HelpId        = HID_DLG_QRY_LEFT_TABLE ;
            DropDown = TRUE;
            TabStop = TRUE;
        };

        ListBox LB_RIGHT_TABLE
        {
            Border = TRUE;
            Pos = MAP_APPFONT( 104, 14 );
            Size = MAP_APPFONT( 87, 60 );
            HelpId        = HID_DLG_QRY_RIGHT_TABLE ;
            DropDown = TRUE;
            TabStop = TRUE;
        };

        FixedLine FL_INVOLVED_FIELDS
        {
            Pos = MAP_APPFONT ( 6 , 29 ) ;
