if ( $MINGW eq "yes" )
{ $CC             = '@CC@';           # C compiler
  $CXX            = '@CXX@'; }        # C++ compiler
else
{ $CC             = PathFormat('@CC@');           # C compiler
  $CXX            = PathFormat('@CXX@'); }        # C++ compiler
$FLIPCMD        = "";               # Flip '/' to '\' wrapper (only for winnt)
$GLIBC          = "";               # Whether the platform uses glibc
$PROEXT         = "@PROEXT@";
$EPM_FLAGS	= "";

# Required for OS/2 macro expansion
my @unixroot='@unixroot';

