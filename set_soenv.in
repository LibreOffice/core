   }
   #Conditional setting depending on gcc3:
      $CVER           = "C300";
      $OUTPATH        = $OUTPATH."2";
   # General NetBSD settings:
      $BIG_SVX        = "TRUE";
      $COM            = "GCC";
      $COMPATH        = '@COMPATH@'; 
      $GUI            = "UNX";
      $GUIBASE        = "unx";
      $GVER           = "VCL";
      $INPATH         = $OUTPATH.$PROEXT;
