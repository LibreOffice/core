        HelpID = "chart2:ListBox:TP_CHARTTYPE:LB_3D_SCHEME";
        Border = TRUE;
        TabStop = TRUE;
        DropDown = TRUE;
        Pos = MAP_APPFONT ( POS_X_IMAGELIST+WIDTH_3D+4 , POS_Y_3D_LOOK ) ;
        Size = MAP_APPFONT ( 60, 12 ) ;
